<?xml version="1.0" encoding="UTF-8"?>

<!-- Copyright Nvizo Software -->

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.nvizo.tesseract"
    version="1.0.2">
    <name>Tesseract</name>
    <description>Cordova Tesseract Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,tesseract</keywords>
    <repo>https://github.com/mkaisercross/tesseract-phonegap-plugin.git</repo>

    <asset src="www/Tesseract.js" target="Tesseract.js"/>

    <js-module src="www/Tesseract.js" name="tesseract">
        <clobbers target="tesseract" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Tesseract">
                <param name="android-package" value="com.nvizo.plugin.Tesseract"/>
            </feature>
        </config-file>
        <source-file src="src/android/Tesseract.java" target-dir="src/com/nvizo/plugin/"/>
        <lib-file src="src/android/jniLibs/armeabi/libtess.so" arch="device" />
        <lib-file src="src/android/jniLibs/armeabi/liblept.so" arch="device" />
        <lib-file src="src/android/jniLibs/armeabi-v7a/libtess.so" arch="device" />
        <lib-file src="src/android/jniLibs/armeabi-v7a/liblept.so" arch="device" />
        <lib-file src="src/android/jniLibs/x86/libtess.so" arch="device" />
        <lib-file src="src/android/jniLibs/x86/liblept.so" arch="device" />
        <lib-file src="src/android/jniLibs/mips/libtess.so" arch="device" />
        <lib-file src="src/android/jniLibs/mips/liblept.so" arch="device" />
     </platform>

</plugin>
